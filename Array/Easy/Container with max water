class Solution {
    public int maxWater(int arr[]) {
      int n=arr.length;
      int left=0;
      int right=n-1;
      int maxwater=0;
      while(left<right){
          int height=Math.min(arr[left],arr[right]);
          int width=right-left;
          int water=height*width;
          maxwater=Math.max(maxwater,water);
          
          if(arr[left]<arr[right]){
              left++;
          }
          else{
              right--;
          }
          
      }
      return maxwater;
    }
}
