import java.util.*;

public class TwoSumList {
    public static ArrayList<Integer> twoSum(List<Integer> nums, int target) {
        Map<Integer, Integer> map = new HashMap<>(); // value -> index
        ArrayList<Integer> result = new ArrayList<>();

        for (int i = 0; i < nums.size(); i++) {
            int complement = target - nums.get(i);
            if (map.containsKey(complement)) {
                result.add(map.get(complement)); // index of complement
                result.add(i);                   // current index
                return result;
            }
            map.put(nums.get(i), i);
        }

        return result; // empty if no solution found
    }

    public static void main(String[] args) {
        List<Integer> nums = Arrays.asList(2, 7, 11, 15);
        int target = 9;
        ArrayList<Integer> indices = twoSum(nums, target);
        System.out.println(indices); // Output: [0, 1]
    }
}
